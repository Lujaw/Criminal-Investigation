<div id ='criminal_index'
<h1>Criminals Info</h1>
<%= form_tag criminals_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<script >
$(function() {
$("table#criminal_index_table").tablesorter({ sortList: [[1,0]] });
});
</script>

<table id='criminal_index_table' class="zebra-striped bordered-table">
  <tr>
    <th><%= sortable "name" %></th>
    <th>Gender</th>
    <th><%= sortable "Age" %></th>
    <th>Race</th>
    <th>Eye color</th>
    <th>Hair color</th>
    <th>Photo</th>
    <th>Additional info</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @criminals.each do |criminal| %>
  <tr>
    <td><%= criminal.name %></td>
    <td><%= criminal.gender %></td>
    <td><%= criminal.age %></td>
    <td><%= criminal.race %></td>
    <td><%= criminal.eye_color %></td>
    <td><%= criminal.hair_color %></td>
    <td><%= image_tag criminal.photo_url.to_s %></td>
    <td><%= criminal.additional_info %></td>
    <td><%= link_to 'Profile', criminal %></td>
    <td><%= link_to 'Remove', criminal, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @criminals %>
<br />
</div>
